<Window x:Class="Notepad.SavePopWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Notepad"
        mc:Ignorable="d"
        Title="记事本" Height="170.755" Width="507.548" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Canvas HorizontalAlignment="Left" Height="100" Margin="0,0,0,0" VerticalAlignment="Top" Width="100">
        <TextBlock x:Name="TextBlock" Canvas.Left="22" TextWrapping="Wrap" Text="你想将更改保存到吗？" Foreground="DarkBlue" Canvas.Top="18" Height="52" Width="442" FontSize="16"/>
        <Button x:Name="SaveButton" Content="保存" Canvas.Left="218" Canvas.Top="96" Width="75" Click="SaveButtonClicked"/>
        <Button x:Name="NotSaveButton" Content="不保存" Canvas.Left="305" Canvas.Top="96" Width="75" Click="NotSaveButtonClicked"/>
        <Button x:Name="CancelButton" Content="取消" Canvas.Left="392" Canvas.Top="96" Width="75" Click="CancelButtonClicked"/>
    </Canvas>
</Window>
